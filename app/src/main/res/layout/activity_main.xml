<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_background"
        android:scaleType="fitXY"
        android:id="@+id/imageView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <!--<Button
            android:id="@+id/btn_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnConnectionClick"
            android:text="@string/connection"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:textAppearance="@style/TextViewAppearance"/>-->
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_host_player"
            style="@style/SwitchButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kswThumbWidth="200dp"
            app:kswThumbHeight="50dp"
            app:kswTextOn="HOST"
            app:kswTextOff="PLAYERS"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnCameraClick"
            android:text="@string/string_start"
            android:textSize="@dimen/textsize"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>



    <!--</LinearLayout>-->

</RelativeLayout>
